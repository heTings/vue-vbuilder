{
    "name": "vue-vbuilder",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint:vue": "eslint .",
        "lint:css": "stylelint \"{packages,apps}/**/*.{css,scss,vue}\"",
        "lint:staged": "lint-staged",
        "format": "prettier --write \"**/*.{js,ts,tsx,vue,json,md,css,scss}\"",
        "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions  \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md|vue)\"",
        "commit": "git-cz",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-git"
        }
    },
    "description": "",
    "devDependencies": {
        "@eslint/js": "10.0.1",
        "@typescript-eslint/parser": "8.56.1",
        "eslint": "10.0.2",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "eslint-plugin-vue": "10.8.0",
        "typescript": "5.9.3",
        "vue-eslint-parser": "10.4.0",
        "globals": "17.3.0",
        "stylelint": "17.4.0",
        "stylelint-config-standard": "40.0.0",
        "stylelint-config-standard-vue": "1.0.0",
        "stylelint-config-standard-scss": "17.0.0",
        "postcss-html": "1.8.1",
        "postcss-scss": "4.0.9",
        "cspell": "9.7.0",
        "cz-git": "1.12.0",
        "commitizen": "4.3.1",
        "@commitlint/cli": "20.4.2",
        "@commitlint/config-conventional": "20.4.2",
        "husky": "9.1.7",
        "commitlint": "20.4.2",
        "lint-staged": "16.2.7",
        "prettier": "3.8.1"
    },
    "lint-staged": {
        "*.{md,json}": [
            "prettier --cache --write --no-error-on-unmatched-pattern"
        ],
        "*.{css,less}": [
            "stylelint --fix",
            "prettier --cache -write"
        ],
        "*.{js,jsx}": [
            "eslint --fix",
            "prettier --cache --write"
        ],
        "*.{ts,tsx,vue}": [
            "eslint --fix",
            "prettier --write --cache"
        ]
    }
}
